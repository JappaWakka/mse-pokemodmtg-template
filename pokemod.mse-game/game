###### Set Number ######
card field:
	type: text
	name: set_number
	description: Set Number
	editable: false
	show statistics: false
	script:
		card_number_pkmn() + "/" + card_count_pkmn()
	
###### Export Name Builder ######
card field:
	type: text
	name: build_exportname
	description: Export Name Builder
	editable: false
	identifying: true
	show statistics: false
	script:
		card_number_pkmn() + "-" + card.name

