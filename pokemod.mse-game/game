### Card Frame Type Image ###
card field:
	type: choice
	name: card_frame
	editable: false
	show statistics: false
	choice:
		name: Pokemon
		choice: Colorless
		choice: Darkness
		choice: Dragon
		choice: Fairy
		choice: Fighting
		choice: Fire
		choice: Grass
		choice: Lightning
		choice: Metal
		choice: Psychic
		choice: Water
		choice: G-SPEC
		choice: G-SPEC Lightning
	choice:
		name: Energy
		choice: Colorless Special
		choice: Double Colorless
		choice: Darkness
		choice: Darkness Special
		choice: Double Dragon
		choice: Fairy
		choice: Fighting
		choice: Fire
		choice: Grass
		choice: Lightning
		choice: Metal
		choice: Metal Special
		choice: Psychic
		choice: Water
		choice: Rainbow Special
		choice: Double Rainbow
		choice: G-SPEC
	choice: Trainer
	choice: Trainer G-SPEC
	script:
		if card.card_type_select == "Pokemon" then card.card_type_select + " " + card.pokemon_type_select else if card.card_type_select == "Energy" then card.card_type_select + " " + card.energy_type_select else if card.card_type_select == "Trainer" then if card.trainer_type_select == "G-SPEC" or card.trainer_type_select == "G-SPEC with Attack" then card.card_type_select + " " + "G-SPEC" else card.card_type_select

###### Card Art ######
card field:
	type: image
	name: art
	description: Card Art
	show statistics: false

### Card Name ###
card field:
	type: text
	name: name
	description: Name of the card
	identifying: false
	show statistics: false
	default: "Name"
	multi line: true
	card list name: Name
	card list visible: true
	card list column: 1
	script:
		if value == "Name" and set.language == "Nederlands" then "Naam" else if value == "Naam" and set.language == "English" then "Name" else value

### HP ###
card field:
	type: text
	name: hp
	description: Hit Points
	default: "HP"
	script:
		if card.card_type_select == "Pokemon" then if value == "HP" and set.language == "Nederlands" then "IP" else if value == "IP" and set.language == "English" then "HP" else value else if card.card_type_select == "Trainer" and card.trainer_type_select == "With HP" then if value == "HP" and set.language == "Nederlands" then "IP" else if value == "IP" and set.language == "English" then "HP" else value

### Trainer Card "Symbol" ###
card field:
	type: text
	name: trainer_card_symbol
	default: "TRAINER"
	editable: false
	
###### Card Subtype ######
card field:
	type: text
	name: card subtype
	description: Subtype of Card
	show statistics: false
	multi line: true
	default: "Basic"
	save value: true
	script:
		if card.card_type_select == "Pokemon" then if value == "Basis" and set.language == "English" then "Basic" else if value == "Basic" and set.language == "Nederlands" then "Basis" else value else if card.card_type_select == "Trainer" then if contains(to_string(card.trainer_type_select), match: "G-SPEC") == true then if set.language == "English" then "G-SPEC" else if set.language == "Nederlands" then "G-SPEC" else value else if card.trainer_type_select == "Supporter" then if set.language == "English" then "Supporter" else if set.language == "Nederlands" then "Ondersteuner" else value else if card.trainer_type_select == "Stadium" or card.trainer_type_select == "Stadium with Attack" then if set.language == "English" then "Stadium" else if set.language == "Nederlands" then "Stadion" else value else if card.trainer_type_select == "Tool Bench" or card.trainer_type_select == "Tool Active" or card.trainer_type_select == "Tool Regular" then if set.language == "English" then "Pokémon Tool" else if set.language == "Nederlands" then "Pokémon-Gereedschap" else value else value else if card.card_type_select == "Energy" then if contains(card.energy_type_select, match: "Double") == true or contains(card.energy_type_select, match: "Special") == true then if set.language == "English" then "Special Energy" else if set.language == "Nederlands" then "Speciale Energie" else value else if contains(to_string(card.energy_type_select), match: "G-SPEC") == true then if set.language == "English" then "G-SPEC | Special Energy" else if set.language == "Nederlands" then "G-SPEC | Speciale Energie" else value else if set.language == "English" then "Basic Energy" else if set.language == "Nederlands" then "Basis-Energiekaart" else value else value

###### Pokémod Logo ######
card field:
	type: choice
	name: pokemod logo
	description: Type of Pokémod Logo
	initial: White
	choice: White
	choice: Red
	choice: Green
	choice:	Blue

