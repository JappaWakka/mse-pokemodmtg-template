	choice: Custom 5
	choice: Custom 6
	
###### Set Number ######
card field:
	type: text
	name: set number
	description: Set Number
	editable: false
	show statistics: false
	script:
		card_number_pkmn() + "/" + card_count_pkmn()
		
###### Rarity ######
card field:
	type: choice
	name: rarity
	description: Rarity of the card
	card list name: Rarity
	card list visible: true
	initial: Common
	choice:	Basic Energy
	choice: Common
	choice: Uncommon
	choice: Rare
	choice: Secret Rare
	script:
		if card.card_type_select == "Energy" then if contains(card.energy_type_select, match: "Double") == false and contains(card.energy_type_select, match: "Special") == false and contains(card.energy_type_select, match: "G-SPEC") == false then "Basic Energy" else if contains(card.energy_type_select, match: "G-SPEC") == true then "Secret Rare" else value else if card.card_type_select == "Trainer" then if contains(card.trainer_type_select, match: "G-SPEC") == true then "Secret Rare" else value else value

###### Trainer Rules ######
card field:
	type: text
	name: trainer rules
	description: Rules Text for Trainer cards.
	show statistics: false
	card list allow: false
	multi line: true
	
###### Extra Trainer Rules ######
card field:
	type: text
	name: extra trainer rules
	editable: false
	description: Rules Text for special types of Trainer cards.
	show statistics: false
	card list allow: false
	multi line: true
	script:
		if card.trainer_type_select == "Supporter" then
			if set.language == "English" then
				"You can play only one Supporter card each turn. When you play this card, put it next to your Active Pokémon. When your turn ends, discard this card."
			else if set.language == "Nederlands" then
				"Je kunt maar één Ondersteunerkaart spelen per beurt. Wanneer je deze kaart speelt, leg je hem naast je Actieve Pokémon. Als je beurt voorbij is, gooi je deze kaart weg."
			else ""
		else if card.trainer_type_select == "Stadium" or card.trainer_type_select == "Stadium with Attack" then
			if set.language == "English" then
				"This card stays in play when you play it. Discard this card if another Stadium card comes into play."
			else if set.language == "Nederlands" then
				"Deze kaart blijft in het spel nadat je hem gespeeld hebt. Gooi deze kaart weg als er een andere Stadionkaart in het spel komt."
			else ""
		else if card.trainer_type_select == "Tool Bench" then
			if set.language == "English" then
				"Attach" + " " + card.name + " " + "to 1 of your Benched Pokémon that doesn't already have a Pokémon Tool card attached to it."
			else if set.language == "Nederlands" then
				"Hecht" + " " + card.name + " " + "aan 1 van je Pokémon op de Bank waar nog geen Pokémon-Gereedschapkaart aan gehecht is."
			else ""
		else if card.trainer_type_select == "Tool Active" then
			if set.language == "English" then
				"Attach" + " " + card.name + " " + "to your Active Pokémon if it doesn't already have a Pokémon Tool card attached to it."
			else if set.language == "Nederlands" then 
				"Hecht" + " " + card.name + " " + "aan je Actieve Pokémon als er nog geen Pokémon-Gereedschapkaart aan gehecht is."
			else ""
		else if card.trainer_type_select == "Tool Regular" then
			if set.language == "English" then
				"Attach" + " " + card.name + " " + "to 1 of your Pokémon that doesn't already have a Pokémon Tool card attached to it."
			else if set.language == "Nederlands" then
				"Hecht" + " " + card.name + " " + "aan 1 van je Pokémon waar nog geen Pokémon-Gereedschapkaart aan gehecht is."
			else ""
		else if card.trainer_type_select == "Technical Machine" then
			if set.language == "English" then
				"Attach this card to 1 of your Pokémon in play. That Pokémon may use this card’s attack instead of its own. At the end of your turn, discard"+ " " + card.name + "."
			else if set.language == "Nederlands" then
				"Hecht deze kaart aan 1 van je Pokémon in het spel. Die Pokémon mag de aanval op deze kaart gebruiken in plaats van één van zijn eigen aanvallen. Als je beurt voorbij is, gooi" + " " + card.name + " " + "dan weg."
			else ""
		else if card.trainer_type_select == "G-SPEC" or card.trainer_type_select == "G-SPEC with Attack" then
			if set.language == "English" then
				"You can't have more than 1 G-SPEC card in your deck.\nWhen this card leaves play, it moves to the Lost Zone."
			else if set.language == "Nederlands" then
				"Je kunt niet meer dan 1 G-SPEC-kaart in je deck hebben.\nWanneer deze kaart het spel verlaat, verplaats hem dan naar de Verloren Kaartenstapel."
			else ""
		else ""

