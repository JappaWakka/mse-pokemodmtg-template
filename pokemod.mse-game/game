mse version: 2.0.0
short name: Pokemod
full name: Pokemod
installer group: pokemod/game files
icon: pokemod_icon.png
position hint: 01
version: 1.0

###### Scripts ######
init script:
	card_number := {
			position (
				of: card
				in: set
			) + 1
		}
	card_count := {
		if number_of_items(in: set) < to_int(set.max_card_amount) then number_of_items(in: set) else to_int(set.max_card_amount)
	}
	card_number_pkmn := { (if card_number() < 100 then "0" else "") + (if card_number() < 10 then "0" else "") + card_number() }
	card_count_pkmn := { (if card_count() < 100 then "0" else "") + (if card_count() < 10 then "0" else "") + card_count() }

	
###### Set Information ######
set field:
	type: info
	name: set information
	description: Information about this set. This information will not appear on the card.
set field:
	type: text
	name: set title
	description: Title of this set. This information will not appear on the card.
set field:
	type: text
	name: description
	multi line: true
	description: Description of this set. This information will not appear on the card.
set field:
	type: choice
	name: language
	description: Language of the set. This will also change the default card field values.
	initial: English
	choice: English
	choice: Nederlands
set field:
	type: choice
	name: default_set_symbol
	initial: Pokemod
	choice: None
	choice: Pokemod
	choice: Custom
set field:
	type: text
	name: max_card_amount
	description: Cards above this number become Secret Cards.
	default: "100"
	
###### Card Fields ######
##### Type Of Card Frame #####

### Card Type Selector ###
card field:
	type: choice
	name: card_type_select
	card list allow: false
	save value: true
	initial: Pokemon
	choice: Pokemon
	choice: Energy
	choice: Trainer

