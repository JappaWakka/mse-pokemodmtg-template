### Welcome to the unofficial Pokemon TCG Template for Magic Set Editor created by Nikki. ###

mse version: 2.0.0
short name: Pokemod
full name: Pokemod
installer group: pokemod/game files
icon: pokemod_icon.png
position hint: 01
version: 1.0

###### Scripts ######
init script
	card_number := {
			position (
				of: card
				in: set
			) + 1
		}
	card_count := {
		number_of_items(in: set)
	}
	card_number_pkmn := { (if card_number() < 100 then "0" else "") + (if card_number() < 10 then "0" else "") + card_number() }
	card_count_pkmn := { (if card_count() < 100 then "0" else "") + (if card_count() < 10 then "0" else "") + card_count() }



###### Set Information ######
set field:
	type: info
	name: Set Information
	description: Information about this set. This information will not appear on the card.
set field:
	type: text
	name: title
	description: Title of this set. This information will not appear on the card.
set field:
	type: text
	name: Description
	multi line: true
	description: Description of this set. This information will not appear on the card.

###### Card Fields ######
### Card Type. ie Grass Basic, Fire Stage 2, Dragon Stage 1, Trainer Supporter, etc. ###
card field:
	type: choice
	name: card_frame
	description: The type of card
	initial: Pokemon Grass
	choice:
		name: Pokemon
		choice: Grass
		choice: Fire
		choice: Water
		choice: Lightning
		choice: Psychic
		choice: Fighting
		choice: Darkness
		choice: Metal
		choice: Fairy
		choice: Dragon
		choice: Colorless

	choice:
		name: Energy
		choice: Double Colorless
		choice: Colorless
		choice: Darkness
		choice: Double Dragon
		choice: Fairy
		choice: Fighting
		choice: Fire
		choice: Grass
		choice: Lightning
		choice: Metal
		choice: Psychic
		choice: Water

	choice: Trainer

### Name of card ###
card field:
	type: text
	name: name
	description: Name of Card
	identifying: false
	show statistics: false
	default: "Name"
	card list name: Name
	card list visible: true
	card list column: 1

### HP ###
card field:
	type: text
	name: hp
	description: Hit Points
	default: "HP"

